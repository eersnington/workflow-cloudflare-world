{
  "name": "@workflow/world-cloudflare",
  "version": "4.0.1-beta.3",
  "description": "A reference World implementation based on Cloudflare",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "tsc --build --clean && rm -rf dist",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "db:push": "pnpm exec drizzle-kit --version && drizzle-kit push"
  },
  "dependencies": {
    "@vercel/queue": "0.0.0-alpha.23",
    "@workflow/errors": "workspace:*",
    "@workflow/world": "workspace:*",
    "@workflow/world-local": "workspace:*",
    "drizzle-orm": "^0.31.2",
    "ulid": "^3.0.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/node": "catalog:",
    "@workflow/errors": "workspace:*",
    "@workflow/tsconfig": "workspace:*",
    "@workflow/world-testing": "workspace:*",
    "drizzle-kit": "^0.22.7",
    "vitest": "catalog:",
    "wrangler": "^4.45.2"
  },
  "keywords": [],
  "author": "",
  "packageManager": "pnpm@10.15.1"
}
